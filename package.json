{
  "name": "diplom",
  "version": "1.0.0",
  "description": "Aвтоматизация тестирования Sauce Demo",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test --project=ui-tests",
    "test:api": "npx playwright test --project=api-tests",
    "test:allure": "npx playwright test --reporter=allure-playwright",
    "allure:generate": "allure generate allure-results --clean",
    "allure:open": "allure open allure-report",
    "deploy:pages": "gh-pages -d allure-report -b gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicksoner/diplom.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/nicksoner/diplom/issues"
  },
  "homepage": "https://github.com/nicksoner/diplom#readme",
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.1",
    "gh-pages": "^6.3.0"
  },
  "dependencies": {
    "allure-playwright": "^3.4.5",
    "dotenv": "^17.2.4"
  }
}
